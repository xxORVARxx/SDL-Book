<?xml version="1.0"?>

<MAIN_MENU>
  <TEXTURES>
    <options Swap_and_clear_texture_map="true"/>

    <texture filename="assets/Play_button.png"
             id="PLAY_B"/>
    <texture filename="assets/Exit_button.png"
             id="EXIT_B"/>

  </TEXTURES>
  <OBJECTS>

    <!-- Play "Button": -->
    <object type="GAME_OBJ_SHEET_BUTTON">
      <game_obj_parameters>
	<texture>PLAY_B</texture>
        <image_size_x type="FLOAT" value="255.0"/>
        <image_size_y type="FLOAT" value="147.0"/>
        <position_x type="FUNCTION_DISPLAY_WIDTH" prosents="50.0" add="-127.5"/>
        <position_y type="FUNCTION_DISPLAY_HEIGHT" prosents="33.0" add="-73.5"/>
        <scale_x type="FLOAT" value="1.0"/>
        <scale_y type="FLOAT" value="1.0"/>
        <size_x type="FLOAT" value="0.0"/>
        <size_y type="FLOAT" value="0.0"/>
      </game_obj_parameters>
      <game_obj_sheet_parameters>
	<total_num_of_frames type="INT" value="3"/>
	<frames_in_a_row type="INT" value="1"/>
	<frame_time type="FLOAT" value="66.67"/>
      </game_obj_sheet_parameters>
      <game_obj_button_parameters>
	<callback_function pointer="POINTER_MENU_TO_PLAY"/>
      </game_obj_button_parameters>
    </object>

    <!-- Exit "Button": -->
    <object type="GAME_OBJ_SHEET_BUTTON">
      <game_obj_parameters>
	<texture>EXIT_B</texture>
        <image_size_x type="FLOAT" value="255.0"/>
        <image_size_y type="FLOAT" value="147.0"/>
        <position_x type="FUNCTION_DISPLAY_WIDTH" prosents="50.0" add="-127.5"/>
        <position_y type="FUNCTION_DISPLAY_HEIGHT" prosents="67.0" add="-73.5"/>
        <scale_x type="FLOAT" value="1.0"/>
        <scale_y type="FLOAT" value="1.0"/>
        <size_x type="FLOAT" value="0.0"/>
        <size_y type="FLOAT" value="0.0"/>
      </game_obj_parameters>
      <game_obj_sheet_parameters>
	<total_num_of_frames type="INT" value="3"/>
	<frames_in_a_row type="INT" value="1"/>
	<frame_time type="FLOAT" value="66.67"/>
      </game_obj_sheet_parameters>
      <game_obj_button_parameters>
	<callback_function pointer="POINTER_EXIT_FROM_MENU"/>
      </game_obj_button_parameters>
    </object>

  </OBJECTS>
</MAIN_MENU>
